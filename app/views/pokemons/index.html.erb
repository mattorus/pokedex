<%= render 'messages' %>

<% if !@pokemons.any?%>
  <%= button_to 'Upload Pokemon!', upload_path %>
<% else %>
  <%= form_for(:pokemon, url: list_path) do |f| %>
    <%= f.label :limit, 'How many Pokemon?' %><br/>
    <%= f.text_field :limit %><br/>

    <%= f.submit 'List Pokemon!'%>
  <% end %>
  <%= button_to 'Delete all', destroy_path, method: :delete, data: {confirm: "Are you sure?"} %>
<% end %>
